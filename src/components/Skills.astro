---
 // Skills component - with icon image above each skill
---

<section id="skills" class="skills-section">
  <div class="container">
    <h2 class="section-title">Skills</h2>
    <p class="section-subtitle">Technical Proficiencies</p>
    <div class="skills-container">

      <div class="skill-category">
        <h3>Automation Skills</h3>
        <div class="skills-grid">
          <div class="skill-item">
            <img src="/icons/sysmac.png" alt="Sysmac Studio icon" class="skill-icon-img" />
            <span>Sysmac Studio</span>
          </div>
          <div class="skill-item">
            <img src="/icons/tiaportal.png" alt="TIA Portal icon" class="skill-icon-img" />
            <span>TIA Portal</span>
          </div>
          <div class="skill-item">
            <img src="/icons/cognex.png" alt="Cognex icon" class="skill-icon-img" />
            <span>Cognex</span>
          </div>
          <div class="skill-item">
            <img src="/icons/datalogic.png" alt="Datalogic icon" class="skill-icon-img" />
            <span>Datalogic</span>
          </div>
        </div>
      </div>

      <div class="skill-category">
        <h3>CAD Software</h3>
        <div class="skills-grid">
          <div class="skill-item">
            <img src="/icons/autodesk.png" alt="Autodesk icon" class="skill-icon-img" />
            <span>Autodesk</span>
          </div>
          <div class="skill-item">
            <img src="/icons/creo.png" alt="Creo Parametric icon" class="skill-icon-img" />
            <span>Creo Parametric</span>
          </div>
          <div class="skill-item">
            <img src="/icons/solidworks.png" alt="Solidworks icon" class="skill-icon-img" />
            <span>Solidworks</span>
          </div>
          <div class="skill-item">
            <img src="/icons/onshape.png" alt="Onshape icon" class="skill-icon-img" />
            <span>Onshape</span>
          </div>
          <div class="skill-item">
            <img src="/icons/bambu.png" alt="Bambu Studio icon" class="skill-icon-img" />
            <span>Bambu Studio (3D Printing)</span>
          </div>
        </div>
      </div>

      <div class="skill-category">
        <h3>Programming Languages</h3>
        <div class="skills-grid">
          <div class="skill-item">
            <img src="/icons/csharp.svg" alt="C# icon" class="skill-icon-img" />
            <span>C#</span>
          </div>
          <div class="skill-item">
            <img src="/icons/matlab.png" alt="Matlab icon" class="skill-icon-img" />
            <span>Matlab</span>
          </div>
          <div class="skill-item">
            <img src="/icons/excelvba.png" alt="Excel VBA icon" class="skill-icon-img" />
            <span>Excel VBA</span>
          </div>
          <div class="skill-item">
            <img src="/icons/latex.png" alt="LaTeX icon" class="skill-icon-img" />
            <span>LaTeX</span>
          </div>
        </div>
      </div>

      <div class="skill-category">
        <h3>General</h3>
        <div class="skills-grid">
          <div class="skill-item">
            <img src="/icons/office.png" alt="Microsoft Office icon" class="skill-icon-img" />
            <span>Microsoft Office</span>
          </div>
          <div class="skill-item">
            <img src="/icons/unity.png" alt="Unity icon" class="skill-icon-img" />
            <span>Unity</span>
          </div>
          <div class="skill-item">
            <img src="/icons/blender.png" alt="Blender icon" class="skill-icon-img" />
            <span>Blender</span>
          </div>
        </div>
      </div>

      <div class="skill-category">
        <h3>Acoustic Software</h3>
        <div class="skills-grid">
          <div class="skill-item">
            <img src="/icons/soundplan.png" alt="SoundPlan icon" class="skill-icon-img" />
            <span>SoundPlan</span>
          </div>
          <div class="skill-item">
            <img src="/icons/odeon.png" alt="Odeon Room Acoustics icon" class="skill-icon-img" />
            <span>Odeon Room Acoustics</span>
          </div>
          <div class="skill-item">
            <img src="/icons/noisetools.png" alt="Noise Tools icon" class="skill-icon-img" />
            <span>Noise Tools</span>
          </div>
          <div class="skill-item">
            <img src="/icons/insul.png" alt="Insul icon" class="skill-icon-img" />
            <span>Insul</span>
          </div>
          <div class="skill-item">
            <img src="/icons/noiseatwork.png" alt="Noise at Work icon" class="skill-icon-img" />
            <span>Noise at Work</span>
          </div>
        </div>
      </div>

    </div>
  </div>
</section>
