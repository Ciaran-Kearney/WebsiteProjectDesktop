 // Skills component - now with icons!
---

<section id="skills" class="skills-section">
  <div class="container">
    <h2 class="section-title">Skills</h2>
    <p class="section-subtitle">Technical Proficiencies</p>
    <div class="skills-container">

      <div class="skill-category">
        <h3>Automation Skills</h3>
        <div class="skills-grid">
          <div class="skill-item"><span title="Sysmac Studio">🔩 Sysmac Studio</span></div>
          <div class="skill-item"><span title="TIA Portal">🛠️ TIA Portal</span></div>
          <div class="skill-item"><span title="Cognex">👁️‍🗨️ Cognex</span></div>
          <div class="skill-item"><span title="Datalogic">📦 Datalogic</span></div>
        </div>
      </div>

      <div class="skill-category">
        <h3>CAD Software</h3>
        <div class="skills-grid">
          <div class="skill-item"><span title="Autodesk">📐 Autodesk</span></div>
          <div class="skill-item"><span title="Creo Parametric">✏️ Creo Parametric</span></div>
          <div class="skill-item"><span title="Solidworks">🧰 Solidworks</span></div>
          <div class="skill-item"><span title="Onshape">🔷 Onshape</span></div>
          <div class="skill-item"><span title="Bambu Studio (3D Printing)">🖨️ Bambu Studio (3D Printing)</span></div>
        </div>
      </div>

      <div class="skill-category">
        <h3>Programming Languages</h3>
        <div class="skills-grid">
          <div class="skill-item"><span title="C#">💻 C#</span></div>
          <div class="skill-item"><span title="Matlab">📊 Matlab</span></div>
          <div class="skill-item"><span title="Excel VBA">📈 Excel VBA</span></div>
          <div class="skill-item"><span title="LaTeX">🔣 LaTeX <span style="font-style:italic;">(\\LaTeX)</span></span></div>
        </div>
      </div>

      <div class="skill-category">
        <h3>General</h3>
        <div class="skills-grid">
          <div class="skill-item"><span title="Microsoft Office">🗂️ Microsoft Office</span></div>
          <div class="skill-item"><span title="Unity">🎮 Unity</span></div>
          <div class="skill-item"><span title="Blender">🍊 Blender</span></div>
        </div>
      </div>

      <div class="skill-category">
        <h3>Acoustic Software</h3>
        <div class="skills-grid">
          <div class="skill-item"><span title="SoundPlan">🔊 SoundPlan</span></div>
          <div class="skill-item"><span title="Odeon Room Acoustics">🏛️ Odeon Room Acoustics</span></div>
          <div class="skill-item"><span title="Noise Tools">🔔 Noise Tools</span></div>
          <div class="skill-item"><span title="Insul">🧱 Insul</span></div>
          <div class="skill-item"><span title="Noise at Work">👷 Noise at Work</span></div>
        </div>
      </div>

    </div>
  </div>
</section>
